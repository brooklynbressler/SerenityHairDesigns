@model SerenityHairDesigns.Models.Customer

@if ((ViewBag.blnIsEmployee == 1) && (ViewBag.IsAdmin == 1))
{
	<div class="center-admin">
		<a class="center" name="LogOut" href="~/Profile/SignOut">Log Out</a>
		<a class="center" name="ScheduleAppointment" href="~/Profile/EmployeeScheduleAppointment">Schedule Appointment</a>
		<a class="center" name="EmployeesInfo" href="~/Profile/EmployeesInfo">My Info</a>
		<a class="center" name="ManageEmployees" href="~/Employee/ManageEmployees">Manage Employees</a>
		<a class="center" name="Profile" href="~/Profile/AdminLoggedIn">Admin Profile</a>
	</div>
}
@if ((ViewBag.blnIsEmployee == 1) && (ViewBag.IsAdmin != 1))
{
	<div class="center-employee">
		<a class="center" name="LogOut" href="~/Profile/SignOut">Log Out</a>
		<a class="center" name="ScheduleAppointment" href="~/Profile/EmployeeScheduleAppointment">Schedule Appointment</a>
		<a class="center" name="EmployeesInfo" href="~/Profile/EmployeesInfo">My Info</a>
		<a class="center" name="Profile" href="~/Profile/EmployeeLoggedIn">My Profile</a>
	</div>
}
@if (ViewBag.blnIsCustomer == 1)
{
	<div class="center-customer">
		<a class="center" name="LogOut" href="~/Profile/SignOut">Log Out</a>
		<a class="center" name="Profile" href="~/Profile/CustomerIndex">My Profile</a>
	</div>
}

<body>
	<div class="Create-Account-Form">
		<p id="Create-Account-Text"> Edit Customer information <br /> </p>
		<div id="Create-Account-Content">
			@using (Html.BeginForm(FormMethod.Post))
			{

				<div>
					<table>
						<tr>
							<td align="left">First Name:</td>
							<td align="left"><div>@Html.TextBoxFor(model => model.strFirstName, new { @autofocus = "autofocus" })</div></td>
						</tr>
						<tr>
							<td align="left">Last Name:</td>
							<td align="left"><div>@Html.TextBoxFor(model => model.strLastName, new { @autofocus = "autofocus" })</div></td>
						</tr>

						<tr>
							<td align="left">Phone:</td>
							<td align="left"><div>@Html.TextBoxFor(model => model.strPhoneNumber, new { type = "tel" })</div></td>
						</tr>
						<tr>
							<td align="left">Email:</td>
							<td align="left"><div>@Html.TextBoxFor(model => model.strEmailAddress, new { @autofocus = "autofocus" })</div></td>
						</tr>

						<tr>
							<td align="left">Password:</td>
							<td align="left"><div>@Html.TextBoxFor(model => model.strPassword, new { @autofocus = "autofocus" })</div></td>
						</tr>

					</table>
				</div>
				<button id="btnCreateEmployee" name="btnSubmit" value="update" class="button-action">Edit Now</button>
			}

		</div>
	</div>
	@foreach (var appointment in ViewBag.lstAppointments)
	{
		<div class="Review">
			<p class="Review-Text">
				@appointment.dtmAppointmentDate
				|
				@appointment.intEstTimeInMins
				|
				$@appointment.monAppointmentTip.ToString("F2")
				|
				$@appointment.monAppointmentCost.ToString("F2")
				|
				@appointment.strAppointmentName
			</p>
		</div>
	}

</body>



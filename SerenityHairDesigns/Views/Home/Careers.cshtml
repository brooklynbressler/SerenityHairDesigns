@model SerenityHairDesigns.Models.Resume

@if ((ViewBag.blnIsEmployee == 1) && (ViewBag.IsAdmin == 1))
{
	<div class="center-admin">
		<a class="center" name="LogOut" href="~/Profile/SignOut">Log Out</a>
		<a class="center" name="ScheduleAppointment" href="~/Profile/EmployeeScheduleAppointment">Schedule Appointment</a>
		<a class="center" name="EmployeesInfo" href="~/Profile/EmployeesInfo">My Info</a>
		<a class="center" name="ManageEmployees" href="~/Employee/ManageEmployees">Manage Employees</a>
		<a class="center" name="Profile" href="~/Profile/AdminLoggedIn">Admin Profile</a>
	</div>
}
@if ((ViewBag.blnIsEmployee == 1) && (ViewBag.IsAdmin != 1))
{
	<div class="center-employee">
		<a class="center" name="LogOut" href="~/Profile/SignOut">Log Out</a>
		<a class="center" name="ScheduleAppointment" href="~/Profile/EmployeeScheduleAppointment">Schedule Appointment</a>
		<a class="center" name="EmployeesInfo" href="~/Profile/EmployeesInfo">My Info</a>
		<a class="center" name="Profile" href="~/Profile/EmployeeLoggedIn">My Profile</a>
	</div>
}
@if (ViewBag.blnIsCustomer == 1)
{
	<div class="center-customer">
		<a class="center" name="LogOut" href="~/Profile/SignOut">Log Out</a>
		<a class="center" name="Profile" href="~/Profile/CustomerIndex">My Profile</a>
	</div>
}

<h2 class="Careers-H2">
	We are seeking new stylists!
</h2>

<p class="Careers-Text">
	We are a family of unique stylists who thrive off of delivering one of a kind experiences to our guests. <br />
	Our key values are to always be a judgement free zone, be a safer space for our guests and team, be transparent at all times, <br />
	have FUN in the salon, deliver incredible results, and to provide integrity for our customers, ourselves, our work, and our team. <br />
	<br />
	We offer competitive commission, product commission, the freedom to make your own schedule, unlimited vacation time, and no contracts. <br />
	<br />
	If you are interested in becoming apart of our amazing team and growing with us, we would love to speak with you!
</p>


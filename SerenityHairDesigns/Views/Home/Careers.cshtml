<form action="Careers" enctype="multipart/form-data" method="post" class="Careers-Form">
	<table>
		<tr>
			<td align="right">First Name:</td>
			<td align="left"><input type="text" id="strFirstName" name="strFirstName" /></td>
		</tr>
		<tr>
			<td align="right">Last Name:</td>
			<td align="left"><input type="text" id="strLastName" name="strLastName" /></td>
		</tr>
		<tr>
			<td align="right">Phone:</td>
			<td align="left"><input type="tel" id="strPhoneNumber" name="strPhoneNumber" @*pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" *@ /></td>
		</tr>
		<tr>
			<td align="right">Email:</td>
			<td align="left"><input type="text" id="strEmailAddress" name="strEmailAddress" /></td>
		</tr>
		<tr>
			<td align="right">Resume:</td>
			<td align="left"><input type="file" id="File" name="File" /></td>
		</tr>
	</table>
	<div class="row text-center">

		<button type="submit" class="btn btn-primary">Submit Application</button>

	</div>
</form>
